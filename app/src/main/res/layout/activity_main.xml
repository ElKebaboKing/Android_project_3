<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- First question with RadioButton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/question_margin"
            android:background="@color/question_background_color">

            <!-- Question -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/question_text_background_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question"
                    android:padding="@dimen/question_text_padding"
                    android:textSize="@dimen/question_text_size"
                    android:textColor="@color/question_text_color"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/flag_width"
                android:layout_height="@dimen/flag_height"
                android:src="@drawable/sweden"
                android:layout_margin="@dimen/flag_margin"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/answer_margin"
                android:paddingLeft="@dimen/checkbox_padding_left"
                android:orientation="vertical">

                <!-- Answer -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/checkbox_padding_left"
                    android:text="The Republic of Kebab"
                    android:textSize="@dimen/answer_text_size" />

                <!-- Answer -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/checkbox_padding_left"
                    android:text="Germany"
                    android:textSize="@dimen/answer_text_size"/>

                <!-- Answer -->
                <RadioButton
                    android:id="@+id/q1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/checkbox_padding_left"
                    android:text="Sweden"
                    android:textSize="@dimen/answer_text_size" />

            </RadioGroup>


        </LinearLayout>


        <!-- Second question with RadioButton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/question_margin"
            android:background="@color/question_background_color">

            <!-- Question -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/question_text_background_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question"
                    android:padding="@dimen/question_text_padding"
                    android:textSize="@dimen/question_text_size"
                    android:textColor="@color/question_text_color"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/flag_width"
                android:layout_height="@dimen/flag_height"
                android:layout_margin="@dimen/flag_margin"
                android:src="@drawable/finland" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/answer_margin"
                android:paddingLeft="@dimen/checkbox_padding_left"
                android:orientation="vertical">

                <!-- Answer -->
                <RadioButton
                    android:id="@+id/q2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/checkbox_padding_left"
                    android:text="Finland"
                    android:textSize="@dimen/answer_text_size" />

                <!-- Answer -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/checkbox_padding_left"
                    android:text="Netherlands"
                    android:textSize="@dimen/answer_text_size"/>

                <!-- Answer -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/checkbox_padding_left"
                    android:text="Norway"
                    android:textSize="@dimen/answer_text_size" />

            </RadioGroup>


        </LinearLayout>

        <!-- Submit button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:onClick="correctQuiz"
                android:text="Submit answers"
                android:layout_margin="32dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>